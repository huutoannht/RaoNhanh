                                                                        <div class="input-group-addon"><i class="icon-phone"></i></div>
                                                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="exampleInputContact_01">Longitude</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-location-pin"></i></div>
                                                                        @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="Latitude">Latitude</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-location-pin"></i></div>
                                                                        @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="Address">Địa chỉ</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-location-pin"></i></div>
                                                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="TimeWorking">Thời gian mở cửa</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-clock"></i></div>
                                                                        @Html.EditorFor(model => model.TimeWorking, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="Facebook">Link Facebook</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-clock"></i></div>
                                                                        @Html.EditorFor(model => model.Facebook, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="Facebook">Link Instagram</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-clock"></i></div>
                                                                        @Html.EditorFor(model => model.Instagram, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="Facebook">Link Twiter</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-clock"></i></div>
                                                                        @Html.EditorFor(model => model.Twitter, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label class="control-label mb-10" for="Facebook">Tên website</label>
                                                                    <div class="input-group">
                                                                        <div class="input-group-addon"><i class="icon-clock"></i></div>
                                                                        @Html.EditorFor(model => model.NameWebsite, new { htmlAttributes = new { @class = "form-control" } })
                                                                    </div>
                                                                </div>
